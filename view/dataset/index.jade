extends ../module/base.jade
block vars
  - var rootid = "errorview"
  - var title = 'plotdb'
  - var description = "plotdb"
  - var thumbnail = "http://plotdb.io/assets/img/thumbnail.jpg"
  - var thumbtype = "image/jpg"
  - var url = "http://plotdb.com/"
block head
  title #{dataset.name} by #{dataset.ownerName}
block body
  div &nbsp;
  #root.narrow

    h2.page-title
      small Dataset / 
      span #{dataset.name}
    .pull-right
      span #[i.fa.fa-list] &nbsp; #{dataset.rows} rows
      span &nbsp; / &nbsp;
      span #[i.fa.fa-archive] &nbsp; #{dataset.size} B
    p #{dataset.description || 'no description. click me to edit...'}
    .sep
    each field in dataset.fields
      .field(style="")
        span #{field.name}
    br
    br

