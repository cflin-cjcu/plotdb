.charts
  .chart(ng-repeat="chart in charts",ng-attr-style="display:inline-block;flex:1 1 {{chart.width}}px")
    .chart-img(ng-click="load(chart)"): .ib(ng-attr-style="background-image:url({{chart.thumbnail}})")
    .chart-desc(ng-click="load(chart)")
      .title
        .pull-right.grayed #[i.fa.fa-dot-circle-o] 5
        span {{chart.name}}
      .desc {{chart.desc || 'check it yourself!'}}
    .labels
      .label(ng-cloak,ng-repeat="tag in chart.tags|tags") {{tag}}
    .social
      .author #[i.fa.fa-user] zbryikt
      .favorite(ng-click="like(chart)", ng-class="{'active':user.data && user.data.likes.chart[chart.key]}") #[i.fa.fa-heart] {{chart.likes || 0}}
      .used #[i.fa.fa-code-fork] 15

