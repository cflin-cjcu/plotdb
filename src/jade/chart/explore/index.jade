block head
block body
  span &nbsp;
  #root(style="max-width:1200px;margin-left:auto;margin-right:auto;",ng-controller="chartList")
    //-
      br
      br

    //-.panel.panel-default(style="max-width:800px;margin:auto"): .panel-body
      label Search Chart
      .input-group
        input.form-control(type="text",placeholder="keyword...")
        span.input-group-btn
          .btn.btn-default Search
