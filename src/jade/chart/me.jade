extends /base.jade
block vars
  - var rootid = "iconview"
  - var title = 'plotdb'
  - var description = "plotdb"
  - var thumbnail = "http://plotdb.io/assets/img/thumbnail.jpg"
  - var thumbtype = "image/jpg"
  - var url = "http://plotdb.io/"
block head
  script(type="text/javascript",src="/js/io.js")
  script(type="text/javascript",src="/js/chart/sample.js")
  script(type="text/javascript",src="/js/chart/index.js")
  script(type="text/javascript",src="/js/data.js")
block body
  div &nbsp;
  #root(ng-controller="mychart",style="max-width:1200px;margin-left:auto;margin-right:auto")
    .chart(ng-repeat="chart in mycharts",ng-click="goto(chart)")
      .chart-img(ng-attr-style="background-image:url({{chart.thumbnail}})")
      .chart-desc
        .title {{chart.name}}
        .desc {{chart.desc || 'check it yourself!'}}
        .dimension
          div(style="margin:10px 0 5px;border-bottom:1px solid #eee") Dimensions
          span(ng-repeat="dim in chart.dimension")
            .label.label-default.label-light {{dim.name}}
            span &nbsp;
        .property
          div(style="margin:10px 0 5px;border-bottom:1px solid #eee") Best use with
          .label.label-default.label-light General Data
    .chart.flexend
  br
  .text-center: a(href="list.html") I want MORE! &nbsp; #[i.fa.fa-pie-chart]
