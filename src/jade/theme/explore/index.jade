extends /base.jade
block vars
  - var rootid = "exploreview"
  - var title = 'plotdb'
  - var description = "plotdb"
  - var thumbnail = "http://plotdb.io/assets/img/thumbnail.jpg"
  - var thumbtype = "image/jpg"
  - var url = "http://plotdb.com/"
block head
block body
  .spc1
  .page-header: .inner
    .title Explore Themes
    .desc use theme to normalize your chart.
  #root.narrow.with-header(ng-controller="themeList")
    .charts(ng-cloak)
      .chart(ng-repeat="theme in themes",ng-attr-style="display:inline-block;flex:1 1 {{theme.width}}px",ng-click="load(theme)")
        .chart-img: .ib(ng-attr-style="background-image:url({{theme.thumbnail}})")
        .chart-desc
          .title
            //-.pull-right.grayed #[i.fa.fa-dot-circle-o] 5
            span {{theme.name}}
          .desc {{theme.description || 'check it yourself!'}}
        .labels
          .label(ng-cloak,ng-repeat="tag in theme.tags|tags") {{tag}}
        .social
          .author #[i.fa.fa-user] {{theme.ownername}}
          .favorite #[i.fa.fa-heart] 15


      .chart.flexend
    br
    .text-center: a(href="#") I want MORE! &nbsp; #[i.fa.fa-pie-chart]
    br
    hr
    br

  include /footer.jade
