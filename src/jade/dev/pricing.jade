extends /base.jade
block vars
  - var rootid = "payview"
  - var url = "https://plotdb.com/dev/pay/"
block head
  script(type="text/javascript",src="https://js.stripe.com/v2/")
  style(type="text/css").
    html,body { background: #fff;}
    .normal { color: #aaa; }
mixin blocks(i)
  .text-center
    each j in [1,2,3,4,5,6,7,8,9]
      +block(i,j)
      if j % 3 == 0
        br
mixin block(i,j)
  - var features = [[["Dataset","1MB",0], ["Free", "Charts",1], ["Default", "Theme",0], ["Public", "Assets",0], ["Traffic", "10MB/M",0], ["PlotDB", "Brand",0], ["PNG", "Download",1], ["No Team", "Control",0], ["Source", "N/A",0]],[ ["Dataset","100MB",1], ["100+", "Charts",1], ["Customize", "Theme",1], ["Public", "Assets",0], ["Traffic", "1G/M",1], ["PlotDB", "Brand",0], ["PNG+SVG", "Download",1], ["No Team", "Control",0], ["Source", "N/A",0]],[ ["Dataset","10GB",1], ["100+", "Charts",1], ["Customize", "Theme",1], ["Privacy", "Control",1], ["Traffic", "100G/M",1], ["Brand", "Free",1], ["PNG+SVG", "Download",1], ["Team", "Control",1], ["Source", "Editing",1]]];
  div(style="display:inline-block")
    //-div(style="width:54px;height:54px;background:#999;border-radius: 5px;margin:10px 10px 2px 10px")
    div(style="width:54px;height:54px;background:url(/assets/img/pricing/pricing-icons.png) -" + (63 * 3 * i + ((j - 1)%3)* 63) + "px -" + (parseInt((j - 1)/3) * 63) + "px no-repeat;border-radius: 5px;margin:10px 10px 2px 10px")
    div(style="line-height:16px;",class=(features[i][j - 1][2] == 1 ? "bold":"normal"))
      span= features[i][j - 1][0]
      br
      span= features[i][j - 1][1]
block body
  .spc1
  #root
    div(style="max-width:800px;margin:auto;font-family:lato")
      h1.text-center Pricing
      p.text-center Special Offer for Educational and NGO available. Contact for more information.
      br
      .row
        .col-sm-4(style="border-right:2px solid #ccc")
          div(style="width:108px;height:108px;margin:auto;background:url(/assets/img/pricing/pic1.png);")
          .text-center
            h3(style="margin-bottom:2px") NOVICE
            p suitable for a quick evaluation
            +blocks(0)
            h2(style="margin-bottom:0") &nbsp;0$ #[small / month]
            small default planstill 0$ / annually
            br
            br
            .btn.btn-default.btn-lg.disabled Current Plan&nbsp; #[i.fa.fa-circle-thin]
        .col-sm-4(style="border-right:2px solid #ccc")
          div(style="width:108px;height:108px;margin:auto;background:url(/assets/img/pricing/pic2.png);")
          .text-center
            h3(style="margin-bottom:2px") BASIC
            p best for individual expertise
            +blocks(1)
            h2(style="margin-bottom:0") 20$ #[small / month]
            small or 200$ / annually
            br
            br
            .btn.btn-success.btn-lg Select &nbsp; #[i.fa.fa-check-circle]

        .col-sm-4
          div(style="width:160px;height:108px;margin:auto;background:url(/assets/img/pricing/pic3.png);")
          .text-center
            h3(style="margin-bottom:2px") EXPERT
            p made for enterprise entity
            +blocks(2)
            h2(style="margin-bottom:0") 50$ #[small / month]
            small or 500$ / annually
            br
            br
            .btn.btn-success.btn-lg Select &nbsp; #[i.fa.fa-circle-thin]
      br
      br
      .text-center
        label.radio-inline
          input(type="radio",name="period",checked)
          span monthly
        label.radio-inline
          input(type="radio",name="period")
          span annually ( save 17% )
      br
      .sep.gap
      br
      .row
        .col-sm-4
          br
          small Your Choice:
          .text-center
            h2 Basic Plan
            big $20 USD / month
            br
            br
            small.grayed * this is a recurring payment

        .col-sm-8
          .panel.panel-default(style="max-width:480px;margin:auto;background:#f9f9f9")
            .panel-body
              .form
                .pull-right: big: big
                  i.fa.fa-cc-visa(style="vertical-align:top")
                  span &nbsp;
                  i.fa.fa-cc-mastercard(style="vertical-align:top")
                  span &nbsp;
                  i.fa.fa-cc-amex(style="vertical-align:top")
                  span &nbsp;
                  i.fa.fa-cc-jcb(style="vertical-align:top")
                  span &nbsp;
                  i.fa.fa-cc-stripe(style="vertical-align:top")
                label Credit Card Number
                input.form-control(type="input",placeholder="Card Number")
                br
                .row
                  .col-sm-6
                    label Expiration
                    input.form-control(type="input",placeholder="Expire Date MM/YY",style="display:inline")
                  .col-sm-6
                    label CVC Code
                    input.form-control(type="input",placeholder="CVC",style="display:inline")
                br
              .btn.btn-primary.btn-block.btn-lg Make Payment
