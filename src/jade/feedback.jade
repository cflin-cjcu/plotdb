include /mixin.jade
#user-feedback(ng-click="gfbt=!!!gfbt")
  i.fa.fa-commenting
  span(ng-cloak) {{'send feedback'|i18n}}
+cover-modal("gfbt","gfbt=false")
  .panel.panel-default
    .panel-body(style="height:500px;overflow-y:scroll")
      .fb-comments(data-href="http://plotdb.com/feedback/",data-width="100%",data-numposts="5",data-colorscheme="light")
    .panel-footer.text-right
      .btn.btn-default(ng-click="gfbt=false") {{'Close'|i18n}}

