@import '../basic'
@import '../vars'

#dataset-create-methods
  margin-bottom: 10px
  .btn
    margin-right: 10px
    background: #f9f9f9
    border: 1px solid rgba(0,0,0,0.2)
  .btn.pull-right
    margin-right: 0
  .btn.toggle
    border: 1px solid color["primary"]
    background: #fff
  .btn img
    width: 24px
  .btn i.fa
    vertical-align: middle
    font-size: 24px

#dataset-editbox
  width: 100%
  min-height: 200px

#dataset-editbox .inner
  width: 100%
  height: 100%
  padding-bottom: 56px

textarea#dataset-edit-text
  border-bottom-right-radius: 0
  border-bottom-left-radius: 0
  font-family: monospace
  width: 100%
  height: 100%

#dataset-editbox-meta
  position: absolute
  bottom: 0
  padding: 10px
  width: 100%
  height: 56px
  border-radius: 0 0 3px 3px
  border: 1px solid color["border"]
  background: #f9f9f9
  box-shadow: 0 -2px 1px rgba(0,0,0,0.1)

.float-dataedit
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: index(order, 'middle-modal')
  padding: 70px 20px
  display: none
  opacity: 0
  &.active
    display: block
    opacity: 1.0
  .dimmer
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,0.5)
  .ib
    position: relative
    height: 100%
  #dataset-create-methods
    padding: 10px
    background: #fff
    border: 1px solid #ccc
    border-bottom: 0
    border-radius: 3px 3px 0 0
    margin-bottom: 0
  textarea
    border-radius: 0
