@import '../vars'
@import '../basic'

#binding-panel
  margin: 5px 0

.databinder .col-sm-4
  padding-right: 0

.ds-list-panel
  .input-group
    float: left
    width: 100%
    margin-right: 3px
    padding-right: 108px
  & > .panel-body > .btn
    margin-left: -108px
    position: relative
    z-index: 1
  .ds-list
    height: 500px
    overflow-y: scroll
    & > .grayed
      margin-top: 5px
    .text-center.grayed:last-of-type, .text-center.grayed:first-of-type
      display: none
    .text-center.grayed:nth-of-type(2)
      display: block


  .ds-list-item
    no-selection()
    padding: 5px 5px
    cursor: pointer
    position: relative
    .info
      display: inline-block
      width: 100%
      padding-left: 20px
    &:nth-of-type(2n+1)
      background: #f9f9f9
    &:hover, &.active
      background: color.primary
      color: #fff
      .grayed
        color: #fff
    .avatar
      display: inline-block
      margin: 3px 5px 0 0
      vertical-align: top
      width: 16px
      height: 16px
      border-radius: 3px
      position: absolute
    .name
      height: 16px
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
    .grayed
      font-size: 0.8em
    .sample
      position: absolute
      right: 5px
      bottom: 6px

.ds-fields-panel
  margin-bottom: 10px
  .ctrl
    .fa
      vertical-align: middle
    a
      cursor: pointer
      margin-left: 24px
    a.disabled
      color: #eee
      cursor: not-allowed
  label
    height: 16px
    margin-bottom: 0
  .info
    height: 12px
  .ds-fields
    max-height: 330px
    overflow-y: scroll
    flexbox()
    flex-wrap(wrap)
  .ball
    width: 12px
    height: 12px
    border-radius: 50%
    display: inline-block
    margin-right: 5px
    vertical-align: middle
    background: #ccc
  .ball.active
    background: color.primary

.ds-field
  display:inline-block
  margin: 5px 10px 0 0
  padding: 3px 5px
  background: #8cc63f
  background: #58aab2
  background: #eee
  border-radius: 5px
  color: #555
  width: 140px
  font-size: 0.9em
  border-bottom: 2px solid #999
  cursor: move
  flex(1 1 auto)
  no-selection()
  .grayed
    color: #999
  .fa
    vertical-align: top
    margin: 8px 5px 0 0
    font-size: 1.5em
    color: #fff
  .detail
    display: inline-block
    vertical-align: middle
    width: 90px
  .grayed
    font-size: 0.85em
    line-height: 1.1em
  .name
    height: 18px
    width: 100%
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

.chart-dims-panel
  margin-bottom: 10px
  box-shadow: none
  color: #999
  .panel-body
    padding: 10px

.chart-dims
  flexbox()
  flex-wrap(wrap)
  margin: 10px -5px 0
  .panel-body
    padding: 5px 10px 10px
  .desc, .grayed
    font-size: 0.9em
  .ds-field
    width: 100%
    .name
      width: initial
    .delete
      float: right
      font-size: 1.3em
      font-weight: bold
      margin-top: 3px
      cursor: pointer
  .ds-field.placeholder
    background: none
    border: 2px dashed #eee
    height: 34px
    cursor: default
    &:before
      content: "drop here"
      text-align: center
      display: block
      color: #ddd

.chart-dim
  width: 160px
  flex(1 1 160px)
  margin: 0 5px 10px
  &.flexend
    flex(3 1 160px!important)

.ds-list-panel, .ds-fields-panel, .chart-dims-panel, .chart-dim.panel
  .panel-heading
    font-family: lato
    padding: 3px 16px
    color: #999
  .input-group-btn
    position: relative
  .loader.xs
    position: absolute
    left: -24px
    top: 8px
    z-index: index(order, 'colorpicker')

.chart-dim.panel
  .panel-heading
    padding: 3px 8px
