@import 'basic'
@import 'vars'

.dataset
  border-radius: 3px
  border: 1px solid #ddd
  padding: 5px
  margin: 5px
  float: left
  width: 240px
  no-selection()
  background: #fff
  z-index: index(order, 'data-file')
  position: relative
  //height: 50px
  overflow: hidden
  max-height: 45px
  transition(all 0.3s ease-in-out)
  &.active
    box-shadow: inset 0 0 3px 1px rgba(0,0,0,0.1)
    background: #f9f9f9
  .title
    margin-left: 8px
    font-size: 0.95em
    cursor: pointer
  .desc
    margin-left: 8px
    color: #aaa
    font-size: 0.8em
  &.extend
    max-height: 1000px
    overflow: auto
    opacity: 1
  &.mini
    max-height: 0
    opacity: 0
    border: 0 solid #eee
    margin-top: 0
    margin-bottom: 0
    padding-top: 0
    padding-bottom: 0
    overflow: hidden
