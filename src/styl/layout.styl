@import 'basic'
@import 'vars'

.page-title
  padding-top: 20px

.page-header
  width: 100%
  height: 144px
  background: #f9f9f9
  color: #444
  margin: 60px 0 -20px
  padding: 24px
  border-bottom: 1px solid #bbb
  .inner
    max-width: 1200px
    margin: auto
    font-family: lato
    padding-left: 10px
    .title
      font-size: 32px
      font-weight: 900
      font-family: arial, serif
    .desc
      font-size: 16px
      font-weight: 200
@media (max-width:800px)
  .page-header
    margin: 46px 0 -30px
