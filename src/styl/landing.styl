
#landing
  padding-top: 1px
  position: relative
  top: 60px
  width: 100%
  height: 45%
  //background: #177ba6
  //box-shadow: inset 0 0 200px rgba(0,0,0,0.5)
  //color: #fff

  background: url(/assets/img/test/lego.jpg) center center no-repeat #ebeae9
  background-repeat: no-repeat
  color: #444
  .title
    width: 100%
    font-size: 64px
    text-align: center
    position: absolute
    top: 35%
    margin-top: -32px
    font-family: 'Lato', 'Helvetica Neue', Helvetica, sans-serif
    font-weight: 700
  .subtitle
    width: 100%
    font-family: Open Sans Condensed, verdana,arial,sans-serif
    font-weight: 300
    font-size: 24px
    text-align: center
    position: absolute
    top: 35%
    font-weight: 200
    margin-top: 48px

@media (max-width: 767px)
  #landing
    top: 45px
    .title
      font-size: 48px
      margin-top: -24px
    .subtitle
      font-size: 16px
      margin-top: 40px

#product-description
  margin-top: 60px
  position: relative
  box-shadow: 0 -5px 8px rgba(0,0,0,0.2)
  border: 1px solid #999
  width: 94%
  margin: auto
  z-index: 9
  padding-bottom: 20px
  border-bottom: 0
  background: rgba(255,255,255,0.9)
  background: -moz-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(255,255,255,0.9) 15%, rgba(255,255,255,0.9) 56%, #edeae9 100%)
  background: -webkit-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(255,255,255,0.9) 15%, rgba(255,255,255,0.9) 56%,#edeae9 100%)
  background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(255,255,255,0.9) 15%, rgba(255,255,255,0.9) 56%,#edeae9 100%)
  filter: "progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#edeae9',GradientType=0 )"

#product-description > h3
  background: rgba(0,0,0,0.7)
  margin-top: 0
  padding-top: 15px
  margin-bottom: 0
  padding-bottom: 17px
  color: #fff
  letter-spacing: 0.5px
  text-shadow: 0 2px 5px rgba(0,0,0,0.9)
