#nav-top
  width: 100%
  height: 60px
  background: none
  position: fixed
  transition all 0.3s ease-out
  border-bottom: 1px solid #999
  background: #fff
  color: #444
  z-index: index(order, 'nav-top')

#nav-top.dim
  height: 50px

#nav-top nav.navbar-default
  transition all 0.3s ease-out
  background: none
  border: none
  color: #444
  max-width: 1200px
  margin: 10px auto

#nav-top nav.navbar-default
  .navbar-brand, .navbar-nav > li > a
    color: #444
    letter-spacing: 1px
  .navbar-nav > li > a:hover
    color: #942
    text-shadow: 0 0 5px rgba(255,255,128,0.7)
  .navbar-brand
    padding-top: 9px
  .navbar-nav > li > a
    padding-top: 10px

#nav-top li.dropdown
  cursor: pointer
  padding: 0
  .avatar
    width: 24px
    height: 24px
    margin-right: 10px
    border-radius: 3px
    background-color: #ddd
    background-size: contain
    display: inline-block
    vertical-align: middle
  li
    text-shadow: none
  .dropdown-menu
    background: rgba(255,255,255,1)
    position: absolute
    border-radius: 3px
    border: 1px solid #ccc
    box-shadow: 0 2px 3px rgba(0,0,0,0.1)

#nav-top .navbar-nav
  float: left
  margin: 0
  & > li
    float: left

#nav-top .pull-right li.dropdown .dropdown-menu
  left: auto
  right: 5px

#nav-top .navbar-default .navbar-nav > .open > a
  background: rgba(0,0,0,0.1)

#nav-login i.fa
  display: none

#nav-top nav.navbar-default .navbar-nav li#nav-localdata > a
  border: 1px solid #ccc
  font-size: 12px
  border-radius: 3px
  padding-bottom: 7px
  padding-top: 6px
  margin-top: 3px
  background: #fff
  position: relative
  &:before
    content: "local data"
    display: block
    position: absolute
    top: -8px
    left: 6px
    color: #fff
    background: #777
    font-size: 9px
    line-height: 11px
    padding: 1px 3px
    border: 1px solid #666
    border-radius: 3px

#nav-top.dim
  background: rgba(255,255,255,0.9)
  nav.navbar-default
    margin: 5px auto

@media (max-width: 800px)
  #nav-top
    height: 46px
  .navbar-brand
    height: auto
  #nav-top .navbar-header
    display: none
  #nav-top nav.navbar-default .navbar-nav li#nav-localdata > a
    font-size: 12px
    padding-bottom: 5px
    padding-top: 6px


@media (max-width: 480px)
  #nav-login
    span
      display: none
    i.fa
      display: inline

@media (max-width: 480px)
  #nav-top nav.navbar-default .navbar-nav > li > a
    font-size: 12px

#nav-top nav.navbar-default
  @media (max-width: 1200px)
    max-width: 800px
  @media (max-width: 767px)
    margin-top: 5px
    margin-bottom: 0
    min-height: initial
    border-bottom: 1px solid #e2e2e2
    .navbar-brand
      padding-left: 8px
      padding-right: 8px
      font-size: 1.2em
      line-height: 1.3em
      padding-bottom: 0

@media (max-width: 682px)
  #nav-top.dim
    height: 45px
  #nav-top .navbar-nav
    & > li > a
      padding-left: 8px
      padding-right: 8px
      font-size: 0.9em
    & > li.heart
      display: none
  #nav-localdata
    display: none
