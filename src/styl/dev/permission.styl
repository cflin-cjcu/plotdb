#permission-panel
  .perm-list
    min-height: 100px
  .perm-item
    margin-bottom: 7px
    border-bottom: 1px solid #eee
    padding-bottom: 7px
    a
      margin-left: 5px
  .avatar
    display: inline-block
    margin-right: 7px
    vertical-align: top
  .info
    display: inline-block
    vertical-align: top
  .name
    line-height: 16px
  .email
    color: #999
    font-size: 0.95em
    line-height: 16px
  .perm-item .dropdown.pull-right
    margin-top: 2px

+keyframes(spray)
  0%
    box-shadow: 0 0 0px 0px rgba(255,192,0,1.0)
  20%
    box-shadow: 0 0 10px 3px rgba(255,192,0,0.5)
  60%
    box-shadow: 0 0 30px 6px rgba(255,192,0,0.2)
  100%
    box-shadow: 0 0 100px 10px rgba(255,192,0,0.0)
    
.btn-emphasis
  box-shadow: 0 0 10px 3px rgba(255,192,0,0.5)
  animation(spray 1s infinite)
