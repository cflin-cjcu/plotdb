@import 'vars'
@import 'basic'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-family: lato, "Heiti TC","Microsoft JhengHei","Helvetica Neue", Helvetica, Arial, sans-serif
  background: color["background"]
  color: color["default"]

#root
  min-height: 100%
  margin: 0 20px 0
  padding-bottom: 100px
  padding-top: 60px
#root.with-header
  margin: -204px 20px 0
  padding: 170px 0 88px
#root.with-header.simple
  margin-top: -180px
  padding-top: 195px

#loading-dimmer
  position: fixed
  display: none
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url(/assets/img/loading-lg-white.svg) rgba(0,0,0,0.5) center center no-repeat
  z-index: index(order, 'alertbox')
#loading-dimmer.active
  display: block
#loading-dimmer.show-progress
  background-position: center 45%
  .progress
    display: block
#loading-dimmer .progress
  display: none
  position: fixed
  top: 50%
  left: 50%
  width: 200px
  height: 14px
  margin: 30px 0 0 -100px


select[ngselect2]
  height: 34px

