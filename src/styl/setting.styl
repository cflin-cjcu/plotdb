@import 'vars'
@import 'basic'

#user-edit
  .col-sm-3
    text-align: right
    line-height: 34px
    vertical-align: middle
    small
      line-height: 12px
      font-size: 12px
      color: #999
      font-weight: normal
      display: block
      margin-top: -5px
  .headline
    margin-bottom: 20px
    border-bottom: 1px solid #ccc
  .checkbox
    margin: 0
  .avatar
    width: 64px
    height: 64px
    display: inline-block
    margin-right: 5px
    border-radius: 3px
    box-shadow: none
    vertical-align: middle
  .avatar-change
    background: url(/assets/img/faceoff.png) center center no-repeat
    background-size: cover
    input
      width: 100%
      height: 100%
      opacity: 0.01
      cursor: pointer
