@import 'basic'
@import 'vars'

.data-file
  border-radius: 3px
  border: 1px solid #ddd
  padding: 5px
  margin: 5px
  float: left
  width: 200px
  no-selection()
  background: #fff
  z-index: index(order, 'data-file')
  position: relative
  &.active
    box-shadow: inset 0 0 3px 1px rgba(0,0,0,0.1)
    background: #f9f9f9
  .title
    margin-left: 8px
    font-size: 0.95em
    cursor: pointer
  .desc
    margin-left: 8px
    color: #aaa
    font-size: 0.8em
