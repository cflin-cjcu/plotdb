@import '../vars'
@import '../basic'

#prc-cc-free
  top: 0
  left: 0
  width: 100%
  height: 100%
  position: absolute
  background: rgba(255,255,255,0.8)
  padding: 15px
  z-index: 3
  .inner
    width: 100%
    height: 100%
    position: relative
    .btn
      position: absolute
      bottom: 0


#prc-cc .fa
  vertical-align: top
  margin-left: 5px
#prc-widget
  max-width: 500px
  margin: auto
  background: #f9f9f9
  .panel-body
    border-bottom: 1px solid #ccc
    min-height: initial
  .col-sm-6
    position: relative
  .selection
    border: 4px solid transparent
    border-radius: 10px
    position: relative
    cursor: pointer
  .selection:hover, .selection.active
    border: 4px solid #ed1d78
  .fa-check-circle
    display: none
  .selection.active .fa-check-circle
    position: absolute
    bottom: -20px
    left: 50%
    margin-left: -16px
    font-size: 32px
    background: #fff
    border-radius: 50%

.prc-widget-logo.float
  top: -35px
  left: 50%
  position: absolute
  margin-left: -30px
.prc-widget-logo
  height: 62px
  margin: auto
  background-size: cover
  width: 60px
  background-image: url(/assets/img/pricing/pic2-frame.png)
.prc-widget-logo.logo3
  width: 88px
  background-image: url(/assets/img/pricing/pic3-frame.png)
.prc-widget-logo.logo3.float
  margin-left: -39px

.prc-widget-logo.lg
  width: 88px
  height: 88px
  background-image: url(/assets/img/pricing/p1f-lg.png)
.prc-widget-logo.lg.float
  margin-left: -44px
.prc-widget-logo.lg.logo2
  background-image: url(/assets/img/pricing/p2f-lg.png)
.prc-widget-logo.lg.logo3
  width: 124px
  background-image: url(/assets/img/pricing/p3f-lg.png)
.prc-widget-logo.lg.logo3.float
  margin-left: -62px

.prc-plan-logo
  width: 108px
  height: 108px
  margin: auto
.prc-plan-logo.logo1
  background: url(/assets/img/pricing/pic1.png)
.prc-plan-logo.logo2
  background: url(/assets/img/pricing/pic2.png)
.prc-plan-logo.logo3
  background: url(/assets/img/pricing/pic3.png)
  width: 160px

.prc-plan-icon
  display: inline-block
  .icon
    width: 54px
    height: 54px
    background-image: url(/assets/img/pricing/pricing-icons.png)
    background-repeat: none
    border-radius: 5px
    margin: 10px 10px 2px 10px
  .text
    line-height: 16px
    & > .normal
      color: #aaa
