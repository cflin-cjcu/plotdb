.sheet
  width: 100%
  height: 100%
  overflow: hidden
  border: 1px solid #ccc

.sheet-body
  height: 100%
  overflow: scroll

.sheet-head
  border-bottom: 2px solid #ccc
  overflow: hidden
  & > div
    background: #f9f9f9

.sheet-head > div, .sheet-cells > div
  white-space: nowrap
  width: 100%
  height: 20px
  &:last-child > div
    border-bottom: none

.sheet-head > div > div, .sheet-cells > div > div
  display: inline-block
  overflow: hidden
  text-align: right
  padding-right: 5px
  border-right: 1px solid #ccc
  border-bottom: 1px solid #ccc
  &:last-child
    border-right: none
