.perm-item
  .btn i.fa
    display: none
  .btn.active i.fa
    display: inline
.perm-panel
  .perm-list
    min-height: 100px
  .perm-item
    margin-bottom: 7px
    border-bottom: 1px solid #eee
    padding-bottom: 7px
    a
      margin-left: 5px
  .avatar
    display: inline-block
    margin-right: 7px
    vertical-align: top
  .info
    display: inline-block
    vertical-align: top
  .name
    line-height: 16px
  .email
    color: #999
    font-size: 0.95em
    line-height: 16px
  .perm-item .dropdown.pull-right
    margin-top: 2px
