@import '../vars'
@import '../basic'

.colorblind
  filter: url(#achromatopsia)
  -webkit-filter: url(#achromatopsia)

.pal-typebtn
  width: 200px
  padding-left: 5px
  display: inline-block
  vertical-align: top
  select
    width: 60px
    height: 29px
    margin-left: 0
    margin-top: -1px
.pal-typeimg
  display: inline-block
  width: 40px
  height: 40px
  background: #f9f9f9
  vertical-align: top
  margin-right: 5px

.pal-typebtn div:nth-of-type(2)
  display: inline-block
  width: 150px
  text-align: left

.pal-colorblock
  position: relative
  width: 165px
  padding-left: 5px
  background: #fff
  &:first-of-type
    padding-top: 5px
  &:last-of-type
    padding-bottom: 5px
  .pal-color
    width: 48px
    height: 36px
    display: inline-block
    vertical-align: middle
    margin-right: 4px
  .pal-color.picked
    cursor: pointer
  .pal-color.picked.disabled
      cursor: not-allowed
  span
    font-family: calibri
    color: #666
#pal-editor-ldcp
  position: absolute
.pal-pickhint
  position: absolute
  color: #fff
  text-shadow: 0 0 2px rgba(0,0,0,1)
  display: none
  width: 48px
  height: 36px
  font-size: 12px
  line-height: 36px
  text-align: center
  cursor: not-allowed
  &.show
    display: inline

#pal-blindtest-hint
  background: rgba(255,0,0,0.7)
  padding: 1px 5px
  border-radius: 2px
  position: absolute
  color: #fff
  margin: 10px 0 0 10px
