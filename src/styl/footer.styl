#footer
  position: fixed
  bottom: 0
  left: 0
  letter-spacing: 0.6px
  width: 100%
  height: 60px
  margin-top: -60px
  border-top: 1px solid #ccc
  background: #444
  color: #fff
  font-weight: 200
  padding: 20px
  box-shadow: 0 -1px 2px rgba(0,0,0,0.1)
  clear: both
  .inner
    max-width: 1200px
    margin: auto
  span, a
    margin-left: 20px
    color: #fff

@media(max-width: 800px)
  #footer
    font-size: 0.9em
    span, a
      margin-left: 13px
      font-size: 0.9em
    span:first-of-type
      display: none
