@import 'basic'
@import 'vars'

#notifications
  position: fixed
  bottom: 10px
  left: 10px
  z-index: index(order, 'notifications')
.notify
  border-radius: 2px
  background: rgba(0,0,0,0.7)
  color: #fff
  box-shadow: 0 4px 4px rgba(0,0,0,0.2)
  padding: 8px 16px

.closebtn
  position: relative
  border-radius: 50%
  background: #444
  color: #fff
  width: 15px
  height: 15px
  font-size: 12px
  padding: 0
  line-height: 14px
  text-align: center
  float:right
  margin: -2px -2px 0 0
  cursor: pointer
  z-index: index(order, 'closebtn')
  &:after
    content: "\0000d7"
    display: inline

.closebtn.inner
  position: absolute
  top: 4px
  right: 4px

.closebtn.outer
  position: absolute
  top: -4px
  right: -4px

li.disabled a
  cursor: not-allowed
  opacity: 0.5
  &:hover
    background: initial
.dropdown-menu > li > a > small
  opacity: 0.7

.grayed
 color: rgba(0,0,0,0.5)

.dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover
  background: #ed1d78
  color: #fff

+keyframes(jump)
  0%
    transform: translate(0,0)
  10%
    transform: translate(0,-2px)
  25%
    transform: translate(0,-4px)
  37.5%
    transform: translate(0,-5px)
  50%
    transform: translate(0,-6px)
  62.5%
    transform: translate(0,-5px)
  75%
    transform: translate(0,-4px)
  90%
    transform: translate(0,-2px)
  100%
    transform: translate(0,0)
