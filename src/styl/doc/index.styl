@import '../vars'
@import '../basic'

#root.doc-root
  font-size: 16px
  letter-spacing: 0.5px
  font-family: lato
  color: #444
  background: #fff
  max-width: 1280px
  padding: 50px 30px 30px 30px
  margin: 0 auto
  h1
    margin: 30px 0
    color: #222
  h2, h3
    color: #222
  .doc-content
    display: block
    position: relative
    padding-right: 220px
  .doc-nav
    position: absolute
    top: 10px
    right: 0 
    width: 200px
  h3
    margin-top: 30px
    padding-bottom: 5px
    border-bottom: 1px solid #ddd
