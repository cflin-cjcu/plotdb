mainbg = #181818
mainfg = #d8d8d8
linebg = #282828
linefg = #565858
barbg = #383838
barfg = #b8b8b8
buttonbg = #484848
buttonborder = #585858
buttonfg = #b8b8b8

d1 = #222
d2 = #292929
d3 = #333

#code-editor.dark
  border: 1px solid d2
  .CodeMirror
    background: mainbg
    color: mainfg
    .cm-string
      color: #f99
    .cm-number
      color: #9f9
    .cm-keyword
      color: #f9f
    .cm-def
      color: #99f
    .cm-property
      color: #9cf
  #code-header
    background: barbg
    border-bottom: 1px solid d2
    color: barfg
    .tabs span
      color: #777
      i
        background: #444
    .tabs span.active, .tabs span:hover
      color: #fff
      i
        background: #777
  #code-ctrl
    background: barbg
    color: barfg
    border-top: 1px solid d2
  .CodeMirror-linenumber
    color: linefg
  .CodeMirror-linenumbers
    background: linebg
  .btn
    background: buttonbg
    color: buttonfg
    border: 1px solid buttonborder
  .CodeMirror-cursor
    border-left: 1px solid #4f4
  .CodeMirror-code > .error
    background: #a11
    .CodeMirror-linenumber
      color: #fff
      background: #810
